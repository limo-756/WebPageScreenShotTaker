{
  "manifest_version": 2,
  "name": "Web Page Screenshot to PDF",
  "version": "1.0.0",

  "description": "Scrolls a page, captures each viewport, stitches into one image, and saves as PDF.",

  "icons": {
    "48": "icons/icon.png",
    "32": "icons/icon_32x32.png"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "downloads"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_title": "Capture full page to PDF",
    "default_icon": {
      "32": "icons/icon_32x32.png",
      "48": "icons/icon.png"
    }
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}